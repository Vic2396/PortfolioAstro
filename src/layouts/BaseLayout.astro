---
import Header from '../components/header/Header.astro'
import Footer from '../components/footer/Footer.astro'
import '../styles/global.css'

const { pageTitle } = Astro.props;
const bg = '/bg-espacio.jpg'
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/avatar.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-icons-font@v9/font/simple-icons.min.css">

  </head>
  <body class="min-h-dvh flex flex-col bg-blend-overlay bg-no-repeat bg-cover bg-fixed bg-slate-300 dark:bg-slate-900" 
        style={`background-image: url('${bg}')`}>
    <Header />
    <main class="flex-1 text-black dark:text-white grid grid-cols-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>