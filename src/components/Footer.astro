---
import Social from './Social.astro';
import twitter from '../images/social/icons8-x(1).svg';
import github from '../images/social/icons8-github(1).svg';
import youtube from '../images/social/icons8-youtube-play.svg';
import instagram from '../images/social/icons8-instagram.svg';
import telegram from '../images/social/icons8-telegram-app.svg';
import linkedin from '../images/social/icons8-linkedin.svg';
import discord from '../images/social/icons8-discord.svg';
---

<footer class="p-2 flex-shrink-0 w-full flex gap-5 justify-center bg-blue-300 dark:bg-slate-950 
                shadow-footer dark:shadow-footerDark">
    <Social platform="twitter" username="astrodotbuild" src={ twitter } />   
    <Social platform="github" username="withastro" src={ github } />
    <Social platform="youtube" username="astrodotbuild" src={ youtube } />
    <Social platform="instagram" username="astrodotbuild" src={ instagram } />
    <Social platform="telegram" username="astrodotbuild" src={ telegram } />
    <Social platform="linkedin" username="astrodotbuild" src={ linkedin } />
    <Social platform="discord" username="astrodotbuild" src={ discord } />
</footer>