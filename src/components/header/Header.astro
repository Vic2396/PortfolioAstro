---
import { Image } from 'astro:assets'
import Navigation from './Navigation.astro'
import ThemeIcon from './ThemeIcon.astro'

const Avatar = '/avatar.png'
---

<header id="site-header" class="sticky top-0 z-50 w-full px-2 md:px-5 lg:px-24 xl:px-28 bg-slate-700 dark:bg-slate-950 
                              text-white grid grid-cols-3 md:grid-cols-[auto_1fr_auto] grid-rows-[auto_1fr] md:grid-rows-1 items-center 
                              shadow-header dark:shadow-headerDark font-title tracking-widest">
  
    <div class="py-2 md:py-2 col-span-2 md:col-span-1 flex flex-row items-center gap-2">
      <Image src={ Avatar } alt="Avatar" width=20 height=20 class="w-auto h-10 bg-slate-600 rounded-full shadow-lg" />
      <h1>Víctor Mora · V&iacute;c</h1>
    </div>
    <div class="h-full col-span-3 md:col-span-1 row-start-2 md:row-auto md:justify-self-end flex flex-col md:flex-row items-center">
      <Navigation />
    </div>
    <ThemeIcon className="md:ml-4 justify-self-end" />
</header>
