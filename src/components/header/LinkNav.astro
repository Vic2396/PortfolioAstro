---
const { href, name } = Astro.props
const currentPath = Astro.url.pathname;
const active = currentPath === href ? 'lg:border-b-2 lg:border-b-lime-400 lg:bg-lime-400/30 dark:lg:border-b-teal-600 dark:lg:bg-teal-600/30' : ''
---

<a href={ href } class=`${ active } w-full h-full grid items-center text-center py-2 px-5 hover:text-lime-400 dark:hover:text-teal-600
                         dark:lg:hover:bg-teal-600/30 lg:hover:bg-lime-400/30 lg:hover:text-white
                          dark:lg:hover:text-white transition-all duration-300 ease-in-out`>
    { name }
</a>