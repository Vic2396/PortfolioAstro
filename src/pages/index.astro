---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/CardIndex.astro';
const pageTitle = "Inicio";
const cardsTitle = [
  "Sobre m√≠",
  "Mis proyectos",
  "Contacto"
];
const url = [
  "/about/",
  "/projects/",
  "/contact/",
]
---
<BaseLayout pageTitle={pageTitle}>
